# ===============================================================================
# WAWAGOT.AI - Environment Variables Template
# ===============================================================================
# คัดลอกไฟล์นี้เป็น .env และกรอกข้อมูลที่จำเป็น
# ===============================================================================

# ===============================================================================
# DATABASE CONFIGURATION
# ===============================================================================
SUPABASE_URL=your_supabase_project_url
SUPABASE_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
DATABASE_URL=your_database_connection_string

# ===============================================================================
# GOOGLE SERVICES
# ===============================================================================
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/callback
GOOGLE_API_KEY=your_google_api_key

# ===============================================================================
# AI SERVICES
# ===============================================================================
OPENAI_API_KEY=your_openai_api_key
GEMINI_API_KEY=your_gemini_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
COHERE_API_KEY=your_cohere_api_key

# ===============================================================================
# MCP SERVER CONFIGURATION
# ===============================================================================
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=3000
MCP_SERVER_DEBUG=true

# ===============================================================================
# SYSTEM CONFIGURATION
# ===============================================================================
WAWAGOT_ENV=development
LOG_LEVEL=INFO
DEBUG=false
SECRET_KEY=your_secret_key_for_sessions

# ===============================================================================
# GPU CONFIGURATION
# ===============================================================================
CUDA_VISIBLE_DEVICES=0
GPU_MEMORY_LIMIT=4096
USE_GPU=true

# ===============================================================================
# MONITORING & LOGGING
# ===============================================================================
SENTRY_DSN=your_sentry_dsn
LOG_FILE_PATH=logs/
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# ===============================================================================
# BACKUP CONFIGURATION
# ===============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true
BACKUP_PATH=backups/

# ===============================================================================
# SECURITY CONFIGURATION
# ===============================================================================
JWT_SECRET_KEY=your_jwt_secret_key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
BCRYPT_ROUNDS=12

# ===============================================================================
# EMAIL CONFIGURATION
# ===============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@wawagot.ai

# ===============================================================================
# FILE STORAGE
# ===============================================================================
STORAGE_TYPE=local
STORAGE_PATH=uploads/
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# ===============================================================================
# CACHE CONFIGURATION
# ===============================================================================
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600
CACHE_ENABLED=true

# ===============================================================================
# API RATE LIMITING
# ===============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600
RATE_LIMIT_ENABLED=true

# ===============================================================================
# CORS CONFIGURATION
# ===============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# ===============================================================================
# THAI LANGUAGE PROCESSING
# ===============================================================================
THAI_NLP_MODEL=thai2vec
THAI_OCR_ENABLED=true
THAI_TEXT_NORMALIZATION=true

# ===============================================================================
# DASHBOARD CONFIGURATION
# ===============================================================================
DASHBOARD_PORT=8080
DASHBOARD_HOST=localhost
DASHBOARD_DEBUG=true
DASHBOARD_THEME=orange

# ===============================================================================
# TESTING CONFIGURATION
# ===============================================================================
TEST_DATABASE_URL=your_test_database_url
TEST_SUPABASE_URL=your_test_supabase_url
TEST_SUPABASE_KEY=your_test_supabase_key

# ===============================================================================
# DEVELOPMENT TOOLS
# ===============================================================================
HOT_RELOAD=true
AUTO_RESTART=true
PROFILING_ENABLED=false

# ===============================================================================
# EXTERNAL INTEGRATIONS
# ===============================================================================
SLACK_WEBHOOK_URL=your_slack_webhook_url
DISCORD_WEBHOOK_URL=your_discord_webhook_url
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# ===============================================================================
# PERFORMANCE CONFIGURATION
# ===============================================================================
WORKER_PROCESSES=4
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30
REQUEST_TIMEOUT=60

# ===============================================================================
# FEATURE FLAGS
# ===============================================================================
ENABLE_AI_FEATURES=true
ENABLE_GPU_ACCELERATION=true
ENABLE_REAL_TIME_MONITORING=true
ENABLE_AUTO_BACKUP=true
ENABLE_THAI_LANGUAGE_PROCESSING=true

# ===============================================================================
# CUSTOM CONFIGURATIONS
# ===============================================================================
# เพิ่มการตั้งค่าเฉพาะโปรเจกต์ที่นี่
CUSTOM_MODEL_PATH=models/
CUSTOM_DATA_PATH=data/
CUSTOM_CONFIG_PATH=config/ 