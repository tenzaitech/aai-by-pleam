{
  "integration_enabled": true,
  "auto_start": true,
  "health_check_interval": 300,
  "integration_features": {
    "backup_on_high_usage": true,
    "monitoring_alert_backup": true,
    "performance_optimization": true,
    "system_health_monitoring": true,
    "auto_cleanup": true,
    "smart_scheduling": true
  },
  "notification_settings": {
    "enable_notifications": true,
    "notification_level": "warning",
    "notification_channels": ["log", "file"]
  },
  "optimization_settings": {
    "log_retention_days": 7,
    "monitoring_data_retention_hours": 24,
    "performance_threshold": 80,
    "auto_garbage_collection": true
  },
  "backup_triggers": {
    "high_cpu_threshold": 90,
    "high_memory_threshold": 90,
    "critical_alert_count": 3,
    "emergency_backup_types": ["config", "logs"]
  },
  "health_check_settings": {
    "backup_health_check_hours": 24,
    "monitoring_health_check_minutes": 5,
    "service_health_check_minutes": 10
  },
  "system_integration": {
    "auto_restart_failed_services": false,
    "graceful_shutdown": true,
    "error_recovery": true,
    "performance_monitoring": true
  }
} 